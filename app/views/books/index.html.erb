<h3>User info</h3>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h4>name</h4>
  <%= @user.name %>
  <h4>introduction</h4>


<h1>New book</h1>
  <%= form_with model:@book do |f| %>
  <h4>Title</h4>
    <%= f.text_field :title %>

  <h4>Opinion</h4>
    <%= f.text_field :body %>
  <%= f.submit'Create Book' %>


  <h4>Books</h4>
  <%= @books.each do |books| %>

    <p><%= image_tag @user.get_profile_image(100,100) %></p>

    <p>Title:<%= books.title %></p>
    <p>Opinion:<%= books.body %></p>

<% end %>
<!DOCTYPE html>
<html>
  <head>

    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">

        <% if user_signed_in? %>



            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" area-expanded="true" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navber-collapse collapse show" id="navbarNavDropdown" style>
              <ul class="navbar-nav ml-auto">
            <li>
               <%= link_to"Bookers",root_path %>
            </li>
            <li>
              <%= link_to"Home",homes_top_path %>
            </li>
            <li>
              <%= link_to"Users",users_path %>
            </li>
            <li>
              <%= link_to"Books",books_path %>
            </li>
            <li>
              <%= link_to"Log out",destroy_user_session_path,method: :delete %>
            </li>
        <% else %>
            <li>
              <%= link_to"Home",homes_top_path %>
            </li>
            <li>
              <%= link_to"About",about_path %>
            </li>
            <li>
              <%= link_to"Sign up",new_user_registration_path %>
            </li>
            <li>
              <%= link_to"Log in",new_user_session_path %>
            </li>
        <% end %>
              </ul>
            </div>
          </div>
        </div>
      </nav>
    </header>
    <div class="container px-5 px-sm-0">
      <div class="row">
        <%= yield %>
      </div>
    </div>

     <footer>
    <div class='container mt-5'>
      <div class='row'>
        <div class='mx-auto'>
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
  </footer>
  </body>
</html>
